# DistributedQ Configuration

# backend configuration
USE_REDIS=false
REDIS_URL=redis://localhost:6379/0
REDIS_KEY_PREFIX=distqueue

# queue settings  
MAX_QUEUE_SIZE=10000
RATE_LIMIT=100

# worker configuration
NUM_WORKERS=2
MAX_WORKERS_PER_POOL=5
WORKER_POLL_INTERVAL=0.1
WORKER_SHUTDOWN_TIMEOUT=30.0

# visibility timeout (redis only)
VISIBILITY_TIMEOUT=300.0
VISIBILITY_CHECK_INTERVAL=30.0

# api configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secret-api-key-here
ENABLE_CORS=true

# monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# production settings (for docker-compose.prod.yml)
REDIS_PASSWORD=your-redis-password-here
ENVIRONMENT=production